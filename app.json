{
  "id": "nl.jwienk.desktop",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "brandColor": "#FF0000",
  "name": {
    "en": "Desktop"
  },
  "description": {
    "en": "Desktop"
  },
  "category": [
    "tools"
  ],
  "permissions": [
    "homey:manager:api"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Jeroen Wienk",
    "email": "jeroenwienk@gmail.com"
  },
  "api": {
    "addSomething": {
      "method": "post",
      "path": "/"
    },
    "getSomething": {
      "method": "get",
      "path": "/"
    }
  },
  "flow": {
    "triggers": [
      {
        "id": "trigger_button",
        "title": {
          "en": "A button is pressed..."
        },
        "titleFormatted": {
          "en": "[[button]] is pressed"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=desktop"
          },
          {
            "type": "autocomplete",
            "name": "button",
            "placeholder": {
              "en": "Search for a button..."
            }
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "action_browser_open",
        "title": {
          "en": "Open url"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=desktop"
          },
          {
            "type": "text",
            "name": "url",
            "placeholder": {
              "en": "URL"
            }
          }
        ]
      },
      {
        "id": "action_path_open",
        "title": {
          "en": "Open path"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=desktop"
          },
          {
            "type": "text",
            "name": "path",
            "placeholder": {
              "en": "Path"
            }
          }
        ]
      },
      {
        "id": "action_notification_show",
        "title": {
          "en": "Create a desktop notification with..."
        },
        "titleFormatted": {
          "en": "Create a desktop notification with title: [[title]] and message: [[body]] and [[silent]]"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=desktop"
          },
          {
            "type": "text",
            "name": "title",
            "placeholder": {
              "en": "Title"
            }
          },
          {
            "type": "text",
            "name": "body",
            "placeholder": {
              "en": "Message"
            }
          },
          {
            "type": "dropdown",
            "name": "silent",
            "values": [
              {
                "id": "true",
                "label": {
                  "en": "Sound Disabled"
                }
              },
              {
                "id": "false",
                "label": {
                  "en": "Sound Enabled"
                }
              }
            ]
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "desktop",
      "name": {
        "en": "Desktop"
      },
      "class": "other",
      "capabilities": [
        "onoff"
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "small": "/drivers/desktop/assets/images/small.png",
        "large": "/drivers/desktop/assets/images/large.png"
      }
    }
  ],
  "capabilities": {
    "test": {
      "type": "boolean",
      "title": {
        "en": "My Button"
      },
      "getable": false,
      "setable": true,
      "uiComponent": "button",
      "uiQuickAction": false,
      "icon": "/assets/icon.svg"
    }
  },
  "discovery": {
    "desktop": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "homeydesktop",
        "protocol": "tcp"
      },
      "id": "{{txt.id}}"
    }
  }
}